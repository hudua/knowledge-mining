@inject NavigationManager NavigationManager;

<MudAppBar Style="@($"color: {Theme.Palette.Black};background: {Theme.Palette.White}")" Elevation="1">
    <MudStack Spacing="3" Row="true">
        <MudImage Src="images/logo.png" Height="35" Elevation="0" onclick="@(() => NavigateToHomePage())" />
        <MudButton Variant="Variant.Text" OnClick="NavigateToSearchPage">Search</MudButton>
        <MudButton Variant="Variant.Text" OnClick="@NavigateToDocumentsPage">Documents</MudButton>
        <MudMenu Label="Documents" AnchorOrigin="Origin.BottomLeft">
            <MudMenuItem OnClick="NavigateToUploadDocumentsPage">Upload Document</MudMenuItem>
        </MudMenu>
    </MudStack>
</MudAppBar>

@code {
    private MudTheme Theme = new MudTheme();

    private void NavigateToHomePage()
    {
        NavigationManager.NavigateTo("/");
    }

    private void NavigateToSearchPage()
    {
        NavigationManager.NavigateTo("/search");
    }

    private void NavigateToDocumentsPage()
    {
        NavigationManager.NavigateTo("/documents");
    }

    private void NavigateToUploadDocumentsPage()
    {
        NavigationManager.NavigateTo("/upload-documents");
    }
}